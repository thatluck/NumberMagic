<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thatluck.numbermagic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_3a"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thatluck.numbermagic.IndexActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thatluck.numbermagic.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.thatluck.numbermagic.MainPreference"
            android:label="设置" >
        </activity>

        <provider
            android:name="com.thatluck.numbermagic.MyContentProvider"
            android:authorities="com.king.myprovider"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <activity
            android:name="com.thatluck.numbermagic.ContentActivity"
            android:label="@string/title_activity_content" >
        </activity>
        <activity
            android:name="com.thatluck.numbermagic.PokerActivity"
            android:label="@string/title_activity_poker" >
        </activity>
        <activity
            android:name="com.thatluck.numbermagic.DictActivity"
            android:label="@string/title_activity_dict" >
        </activity>
    </application>

</manifest>